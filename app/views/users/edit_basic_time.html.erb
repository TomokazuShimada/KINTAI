<% provide(:title, @user) %>
<% provide(:button_text, '編集') %>

<h1>基本情報の更新</h1
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
    <%= f.label "指定時間", class: "label-#{yield(:class_text)}" %>
    <%= f.time_field :basic_time, class: "form-control" %>
  
    <%= f.label "基本時間", class: "label-#{yield(:class_text)}" %>
    <%= f.time_field :work_time, class: "form-control" %>
  
    <div class="center">
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block--time btn-#{yield(:class_text)}" %>
    </div>
  <% end %> 
  </div>
</div>
